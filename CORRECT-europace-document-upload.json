{
  "_comment": "CORRECT Europace Unterlagen API V2 - Upload Document",
  "_endpoint": "POST https://api.europace2.de/v2/dokumente",
  "_authentication": "Bearer Token (OAuth2) - NOT Basic Auth!",
  "_required_scope": "unterlagen:dokument:schreiben",
  "_content_type": "multipart/form-data",

  "form_fields": {
    "file": "(binary PDF file)",
    "caseId": "{{vorgangsnummer_from_step1}}",
    "displayName": "Selbstauskunft - {{customer_name}}",
    "category": "Selbstauskunft"
  },

  "curl_example": "curl -X POST 'https://api.europace2.de/v2/dokumente' -H 'Authorization: Bearer YOUR_OAUTH2_TOKEN' -F 'file=@document.pdf' -F 'caseId=YX4MDU' -F 'displayName=Selbstauskunft Mustermann' -F 'category=Selbstauskunft'",

  "expected_response": {
    "id": "61c0c61a8b34173cc62e7896"
  }
}
